<?xml version="1.0"?>
<ItemRenderer>
	<Data>
		<Sprite name="s_LeftL" fileName="game/player_feet16.rttex" textureSize="32" frame="26,22" />
		<Sprite name="s_LeftR" fileName="game/player_feet16.rttex" textureSize="32" frame="25,22" />
		<Sprite name="s_RightL" fileName="game/player_feet16.rttex" textureSize="32" frame="26,23" />
		<Sprite name="s_RightR" fileName="game/player_feet16.rttex" textureSize="32" frame="25,23" />
		<Sprite name="s_bubble" fileName="game/particles12.rttex" textureSize="32" frame="25,6" />
		<Sprite name="s_bubblePop" fileName="game/particles12.rttex" textureSize="32" frame="25,6" />
		<Sprite name="s_legs" fileName="game/player_sit.rttex" textureSize="32" frame="1,0" />
		<Sprite name="s_liquid" fileName="game/particles_large16.rttex" textureSize="64" frame="9,2" />
		<Animations>
			<SpriteAnimation name="a_bubble" sprite="s_bubblePop" animTime="400">
				<Frame>28,6</Frame>
				<Frame>25,6</Frame>
				<Frame>26,6</Frame>
				<Frame>27,6</Frame>
			</SpriteAnimation>
			<SpriteAnimation name="a_liquid" sprite="s_liquid" animTime="400" autoPlay="true" isLoop="true">
				<Frame>9,2</Frame>
				<Frame>10,2</Frame>
				<Frame>11,2</Frame>
				<Frame>12,2</Frame>
			</SpriteAnimation>
		</Animations>
		<Animations />
		<ParticleSystems />
		<RenderOptions>
			<Default>
				<Set name="ClothingOffsetFromShoes">-13</Set>
				<Set name="UserNameOffset">12</Set>
				<Set name="ShoesHidesBodyLegs">true</Set>
				<Set name="IsToRenderPants">false</Set>
				<Set name="IgnorePunchTypeCheck">true</Set>
				<Set name="ShoesShouldIgnoreRaptorLegsOffset">true</Set>
			</Default>
		</RenderOptions>
		<StateMachines>
			<StateMachine name="Facing">
				<States>
					<State name="Left" />
					<State name="Right" />
				</States>
				<Transitions>
					<Transition to="Left" from="Right">
						<Condition>
							<IsFacingLeft>true</IsFacingLeft>
						</Condition>
					</Transition>
					<Transition to="Right" from="Left">
						<Condition>
							<IsFacingLeft>false</IsFacingLeft>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
			<StateMachine name="Motion">
				<States>
					<State name="Idle" />
					<State name="Moving" />
					<State name="Other" />
				</States>
				<Transitions>
					<Transition to="Idle" from="Moving|Other">
						<Condition type="and">
							<IsVariableFloat name="speed.length" operator="Less" abs="true">0.1</IsVariableFloat>
							<IsSitting>false</IsSitting>
							<IsSleepingOnaBed>false</IsSleepingOnaBed>
						</Condition>
					</Transition>
					<Transition to="Moving" from="Idle|Other">
						<Condition>
							<IsVariableFloat name="speed.length" operator="Greater" abs="true">0.1</IsVariableFloat>
						</Condition>
					</Transition>
					<Transition to="Other" from="Idle|Moving">
						<Condition>
							<IsSitting>true</IsSitting>
							<IsSleepingOnaBed>true</IsSleepingOnaBed>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
		<ParticleSystems>
			<ParticleSystem name="ps_bubbleIdle">
				<Emitter>
					<Set name="offset">0,10</Set>
					<Random name="emissionInterval" min="0.5" max="2" />
					<Set name="infParticles">true</Set>
					<Set name="infLifeTime">true</Set>
					<Set name="particlesPerEmission">1</Set>
				</Emitter>
				<Particle>
					<Set name="sprite">s_bubble</Set>
					<Set name="isBackgroundParticle">true</Set>
					<Random name="offset" min="-20, 0" max="20, 0" />
					<Random name="initialScale" min="0.3" max="0.8" />
					<Random name="lifeTime" min="1.75" max="2.5" />
					<Random name="initialVelocity" min="-15, -20" max="15, -5" />
					<OnFinish>
						<ParticleSystemName>ps_bubblePop</ParticleSystemName>
					</OnFinish>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="ps_bubbleMove">
				<Emitter>
					<Set name="offset">0,10</Set>
					<Random name="emissionInterval" min="0.25" max="0.5" />
					<Set name="infParticles">true</Set>
					<Set name="infLifeTime">true</Set>
					<Random name="particlesPerEmission" min="2" max="5" />
				</Emitter>
				<Particle>
					<Set name="sprite">s_bubble</Set>
					<Set name="isBackgroundParticle">true</Set>
					<Random name="offset" min="-20, 0" max="20, 0" />
					<Random name="initialScale" min="0.3" max="0.8" />
					<Random name="lifeTime" min="1.5" max="2.5" />
					<Random name="initialVelocity" min="-30, -35" max="30, -5" />
					<OnFinish>
						<ParticleSystemName>ps_bubblePop</ParticleSystemName>
					</OnFinish>
				</Particle>
			</ParticleSystem>
			<ParticleSystem name="ps_bubblePop">
				<Emitter>
					<Set name="lifeTime">0</Set>
					<Set name="emissionInterval">0</Set>
					<Set name="infParticles">false</Set>
					<Set name="infLifeTime">false</Set>
					<Set name="checkParticleNumToEmit">false</Set>
					<Set name="particlesPerEmission">1</Set>
					<Set name="particlesToEmit">0</Set>
					<Set name="delayTimer">0</Set>
				</Emitter>
				<Particle UseParentScale="true">
					<Set name="sprite">s_bubblePop</Set>
					<Set name="isBackgroundParticle">true</Set>
					<Set name="lifeTime">0.4</Set>
					<Set name="useGravity">true</Set>
					<Set name="gravityVector">0, 30</Set>
				</Particle>
			</ParticleSystem>
		</ParticleSystems>
	</Data>
	<RenderRules>
		<Update>
			<StopIf>
				<IsAction>PUNCH</IsAction>
			</StopIf>
			<AvatarTransform class="ArmAngle">
				<Set name="armName">arm1Angle</Set>
				<Set name="armAngle">0</Set>
			</AvatarTransform>
			<AvatarTransform class="ArmAngle">
				<Set name="armName">arm2Angle</Set>
				<Set name="armAngle">0</Set>
			</AvatarTransform>
		</Update>
		<RenderShoes>
			<Group>
				<StopIf type="or">
					<IsRenderMod>RENDER_MOD_MINI_YOU</IsRenderMod>
					<IsRenderMod>RENDER_MOD_MANNEQUIN</IsRenderMod>
				</StopIf>
				<ParticleSystemUpdate name="ps_bubbleIdle" onState="Motion.Idle" />
				<ParticleSystemUpdate name="ps_bubbleMove" onState="Motion.Moving" />
			</Group>
			<Translate>0,13,0</Translate>
			<Group onState="Facing.Right">
				<SpriteRender name="s_LeftR" blend="PREMULTIPLIED_ALPHA" drawShadow="true" alignmentLeft="DOWN_LEFT" alignmentRight="DOWN_RIGHT" />
				<SpriteRender name="s_RightR" blend="PREMULTIPLIED_ALPHA" drawShadow="true" alignmentLeft="DOWN_RIGHT" alignmentRight="DOWN_LEFT" />
			</Group>
			<Group onState="Facing.Left">
				<SpriteRender name="s_LeftL" blend="PREMULTIPLIED_ALPHA" drawShadow="true" alignmentLeft="DOWN_LEFT" alignmentRight="DOWN_RIGHT" />
				<SpriteRender name="s_RightL" blend="PREMULTIPLIED_ALPHA" drawShadow="true" alignmentLeft="DOWN_RIGHT" alignmentRight="DOWN_LEFT" />
			</Group>
			<SpriteRender name="s_legs" offset="1,-20" tintOverride="SKINORPANTS" />
			
			<StopIf>
				<IsVariableBool name="onGround">false</IsVariableBool>
			</StopIf>
			<SpriteRender name="s_liquid" offset="0,0" alignment="DOWN_CENTER" />
		</RenderShoes>
	</RenderRules>
</ItemRenderer>
