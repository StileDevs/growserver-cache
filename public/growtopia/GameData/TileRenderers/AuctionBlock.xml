<?xml version="1.0" ?>
<ItemRenderer itemID="ITEM_ID_AUCTION_BLOCK">
    <Data>
        <Sprite name="SpriteOff" fileName="game/tiles_page17.rttex" textureSize="32,32" frame="29,6" />
        <Sprite name="SpriteOn" fileName="game/tiles_page17.rttex" textureSize="32,32" frame="28,6" />
        <Sprite name="SpriteSold" fileName="game/tiles_page17.rttex" textureSize="32,32" frame="30,6" />
		
		<StateMachines>
			<StateMachine name="State">
				<States>
					<State name="Inactive"/>
					<State name="Active"/>
					<State name="Sold"/>
				</States>
				<Transitions>
					<Transition to="Inactive" from="Active|Sold">
						<Condition>
							<IsTileAuctionState>Inactive</IsTileAuctionState>
						</Condition>
					</Transition>
					<Transition to="Active" from="Inactive">
						<Condition>
							<IsTileAuctionState>Active</IsTileAuctionState>
						</Condition>
					</Transition>
					<Transition to="Sold" from="Active|Inactive">
						<Condition>
							<IsTileAuctionState>Sold</IsTileAuctionState>
						</Condition>
					</Transition>
				</Transitions>
			</StateMachine>
		</StateMachines>
    </Data>
	
    <RenderRules>
        <Render>
            <Group onState="State.Inactive">
                <SpriteRender name="SpriteOff" />
            </Group>
            <Group onState="State.Active">
                <SpriteRender name="SpriteOn" />
				<Scale>0.45,0.45,0.45</Scale>
				<Translate>-2,-15,0</Translate>
				<ItemIdRender itemId="tile.extra.auction.item" useItemIcon="true"/>
            </Group>
			<Group onState="State.Sold">
                <SpriteRender name="SpriteSold" />
            </Group>
        </Render>
    </RenderRules>
</ItemRenderer>
