<template name="ItemIconWithText">
  <head>
    <link type="text/rcss" href="../../rml.rcss" />
    <link type="text/rcss" href="../../BaseStyles.rcss" />
    <link type="text/rcss" href="ItemIconWithText.rcss" />
  </head>
  <body>
    <div class="icon-with-text" 
         data-class-disabled="model.isDisabled" 
         data-attr-button_id="model.identifier"
         onclick="OnEvent(event,ItemIconWithTextActionName)">
      <div class="icon-header-text color_yellow"
           data-if="model.header != ''"
           data-style-background-color="model.itemId != 0 ? 'rgba(255,255,255,50)' : 'rgba(255,255,255,25)'">
        <TruncatingString lines="1" data-attr-source="model.header"/>
      </div>
      <div data-attr-class="'icon ' + model.borderColour">
        <span class="error" data-if="model.showError"/>
        <span class="transmute" data-if="model.showTransmutation" data-style-decorator="'image(' + model.transmuteIcon + ')'"/>
        <span class="image" data-if="model.itemId != 0" data-style-decorator="'itemidimage(' + model.itemId + ')'"/>
        <span class="none-image" data-if="model.itemId == 0"/>
      </div>
      <span class="icon-text color_yellow" data-class-hidden="model.truncateLabel">{{model.label}}</span>
      <div class="icon-truncating-text color_yellow" data-class-hidden="!model.truncateLabel">
        <TruncatingString lines="1" data-attr-source="model.label"/>
      </div>
    </div>
  </body>
</template>