<rml>
  <head>
    <title>WardrobeMain</title>
    <link type="text/template" href="../Base/BasePopup.rml" />
    <link type="text/template" href="../Templates/ItemIconWithText.rml" />
    <link type="text/rcss" href="../Base/WindowTitle.rcss" />
    <link type="text/rcss" href="WardrobeMain.rcss" />
    <script lang="text/lua">
      ItemIconWithTextActionName = 'WardrobeMain.SlotClick'
    </script>
  </head>
  <body template="BasePopup" class="show-scrollbar wondow-content-full wondow-content-horizontal">
    <div data-model="WardrobeModel" id="wardrobe-main-popup" class="font-content">
      <div class="content">
        <div id="window-title">
          <div class="title-icon" />
          <div class="title-text font-title label">
            Wardrobe
          </div>
        </div>
        <p class="color_brown" data-class-hidden="!IsInFashionShow" data-rml="ToRMLText(Localize('[WARDROBE_MAIN_ERROR_MSG]'))"/>
        <div id="button-holder">
          <div onclick="OnEvent(event, 'WardrobeMain.UnequipAll')" class="img-button button-default-color" data-class-disabled="IsInFashionShow || !HasClothes">
            <span class="label" data-rml="ToRMLText(Localize('[WARDROBE_MAIN_UNEQUIP_BTN]'))"/>
          </div>
          <div onclick="OnEvent(event, 'WardrobeMain.Save')" class="img-button button-default-color" data-class-disabled="IsInFashionShow">
            <span class="label" data-rml="ToRMLText(Localize('[WARDROBE_MAIN_SAVE_BTN]'))"/>
          </div>
          <div onclick="OnEvent(event, 'WardrobeMain.Load')" class="img-button button-default-color" data-class-disabled="IsInFashionShow">
            <span class="label" data-rml="ToRMLText(Localize('[WARDROBE_MAIN_LOAD_BTN]'))"/>
          </div>
        </div>
        <table class="full-width-table" rows="3" columns="8">
          <tr>
            <td>
            </td>
            <td data-alias-model="Clothing[0]">
              <template src="ItemIconWithText"/>
            </td>
            <td class="central-cell" colspan="4" rowspan="3">
              <RenderPlayer class="portrait"/>
            </td>
            <td data-alias-model="Clothing[7]">
              <template src="ItemIconWithText"/>
            </td>
            <td></td>
          </tr>
          <tr>
            <td data-alias-model="Clothing[6]">
              <template src="ItemIconWithText"/>
            </td>
            <td data-alias-model="Clothing[4]">
              <template src="ItemIconWithText"/>
            </td>
            <!-- Central cell is already merged -->

            <td data-alias-model="Clothing[8]">
              <template src="ItemIconWithText"/>
            </td>
            <td data-alias-model="Ancestral">
              <template src="ItemIconWithText"/>
            </td>
          </tr>
          <tr>

            <td data-alias-model="Clothing[2]">
              <template src="ItemIconWithText"/>
            </td>
            <td data-alias-model="Clothing[1]">
              <template src="ItemIconWithText"/>
            </td>
            <!-- Central cell is already merged -->

            <td data-alias-model="Clothing[5]">
              <template src="ItemIconWithText"/>
            </td>
            <td data-alias-model="Clothing[3]">
              <template src="ItemIconWithText"/>
            </td>
          </tr>
        </table>
        <div id="back-button" onclick="OnEvent(event, 'WardrobeMain.OnBack')" class="img-button button-default-color">
          <span class="label">Back</span>
        </div>
      </div>
    </div>
  </body>
</rml>