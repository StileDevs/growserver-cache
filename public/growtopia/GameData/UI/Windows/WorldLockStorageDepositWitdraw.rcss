.window {
    min-height: 0;
    max-height: none;
    max-width: 75vw;
}

@spritesheet wl_storage_withdraw_ui_title_sprites {
    src: game/tiles_page17.rttex;
    resolution: 1x;
    wl_storage_withdraw_title_icon: 416px 288px 32px 32px;
}

#window-title .title-icon {
    decorator: image(wl_storage_withdraw_title_icon);
}

input[type="number"] {
    border: 5dp #87B8CCFF;
    border-radius: 5dp;
    background-color: #427e97;
    box-shadow: inset #000f 2dp 2dp 2dp 0px;
}

#add-remove-button {
    margin-left: 24dp;
}

.amount-container {
  display: flex;
  align-items: center; /* Aligns label and input vertically */
  gap: 10px; /* Adds space between label and input */
}

.wl-icons-group {
    position: relative;
    margin-left: 120dp;
    margin-top: 10dp;
}

.item-small {
    position: relative;
    width: 110dp;
    height: 34dp;
    display: inline-block; 
    vertical-align: top;
    horizontal-align: left;
}

.item-icon {
    position: relative;
    height: 34dp;
    width: 34dp;
}

.wl-value {
   margin-left: 36dp;
   margin-top: 4dp;
   position: relative;
   display: inline-block;
   height: 34dp;
   width: 34dp;
}

#WorldLockStorageDepositWitdraw-popup .error-message {
    margin-top: 10dp;
}